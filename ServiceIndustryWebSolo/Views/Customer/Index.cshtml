@model IEnumerable<ServiceIndustryWebSolo.Models.IndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>All Customers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr onclick='window.location.href ="@Url.Action("ExeListByCustId", "Executor", new {email = item.Email },null)"'>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <div class="col-md-3 col-lg-3 " align="center"> <img src="@Url.Content("~/Images/UserImgs/" + item.Photo)" alt="Type Image" height="100%" width="100%" /> </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @*<button id="deleteBut" value="@item.Email">Delete</button>*@
                @if (@HttpContext.Current.User.IsInRole("admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { email = item.Email })
                }
            </td>
        </tr>
    }

</table>


